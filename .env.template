# =============================================================================
# Environment Configuration Template
# Copy this file to .env and update the values for your environment
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://your_user:your_password@localhost:5432/your_db_name

# Set to true for SQL query debugging (development only)
DATABASE_ECHO=false

# =============================================================================
# KEYCLOAK CONFIGURATION (EXTERNAL)
# =============================================================================
# Keycloak server base URL (include http/https)
# NOTE: Keycloak must be installed and configured separately
KEYCLOAK_BASE_URL=http://localhost:8080

# Keycloak realm name (create this in Keycloak admin console)
KEYCLOAK_REALM=YOUR_REALM

# Keycloak client ID and secret (create client in Keycloak admin console)
KEYCLOAK_CLIENT_ID=your-client-id
KEYCLOAK_CLIENT_SECRET=your-client-secret

# Keycloak admin credentials for user management
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# =============================================================================
# JWT TOKEN CONFIGURATION
# =============================================================================
# Secret key for signing JWT tokens (CHANGE THIS IN PRODUCTION!)
# Generate a strong secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-very-secure-secret-key-change-this-in-production

# JWT algorithm (HS256 is recommended)
JWT_ALGORITHM=HS256

# JWT token expiration time in minutes
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# API CONFIGURATION (Optional)
# =============================================================================
# API server host and port (for uvicorn)
API_HOST=0.0.0.0
API_PORT=8001

# Enable auto-reload in development
API_RELOAD=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# CORS CONFIGURATION (Optional)
# =============================================================================
# Allowed origins for CORS (comma-separated)
# Add your frontend URLs here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

